<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background">

    <!-- Title of the exhibit -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Baseball Exhibit"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="20dp" />

    <!-- Grid Layout for transparent buttons -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="2"
        android:rowCount="2"
        android:padding="10dp"
        android:layout_gravity="center">

        <!-- Button 1: Trivia Challenge -->
        <Button
            android:id="@+id/triviaChallengeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="Trivia Challenge"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:background="@drawable/rounded_button"
            android:elevation="4dp"
            android:padding="16dp" />

        <!-- Button 2: Iconic Players -->
        <Button
            android:id="@+id/iconicPlayersButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="Iconic Players"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:background="@drawable/rounded_button"
            android:elevation="4dp"
            android:padding="16dp" />

        <!-- Button 3: Iconic Teams -->
        <Button
            android:id="@+id/iconicTeamsButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="Iconic Teams"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:background="@drawable/rounded_button"
            android:elevation="4dp"
            android:padding="16dp" />

        <!-- Button 4: Historical Highlights -->
        <Button
            android:id="@+id/historicalHighlightsButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_rowSpan="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="Historical Highlights"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:background="@drawable/rounded_button"
            android:elevation="4dp"
            android:padding="16dp" />

    </GridLayout>
</LinearLayout>
