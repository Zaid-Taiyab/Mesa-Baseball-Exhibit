<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/card_bg2"
    android:padding="16dp">

    <!-- New Header (replaces Baseball Exhibit) -->
    <TextView
        android:id="@+id/headerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explore Arizonaâ€™s Baseball Legacy"
        android:textSize="30sp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:textColor="#FFD700"
        android:letterSpacing="0.08"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="20dp"
        android:shadowColor="#000000"
        android:shadowRadius="6"
        android:shadowDx="2"
        android:shadowDy="2" />

    <!-- Grid of 2 columns and 3 rows -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="2"
        android:rowCount="3"
        android:useDefaultMargins="true"
        android:alignmentMode="alignMargins">

        <!-- TEMPLATE CARD STRUCTURE USED FOR ALL BUTTONS -->

        <androidx.cardview.widget.CardView
            android:id="@+id/triviaCard"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.42"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="0"
            android:layout_column="0"
            app:cardElevation="6dp"
            app:cardCornerRadius="14dp"
            android:stateListAnimator="@animator/button_hover_scale"
            app:cardBackgroundColor="#FFb119">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:adjustViewBounds="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/trivia_card_image"
                    android:scaleType="centerCrop" />

                <!-- Dark overlay to keep text readable -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#88000000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Trivia"
                    android:gravity="center"
                    android:textColor="#FFD700"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:shadowColor="#000000"
                    android:shadowRadius="8"
                    android:shadowDx="2"
                    android:shadowDy="2" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/playersCard"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.42"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="0"
            android:layout_column="1"
            app:cardElevation="6dp"
            app:cardCornerRadius="14dp"
            android:stateListAnimator="@animator/button_hover_scale"
            app:cardBackgroundColor="#9DC0CC">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:adjustViewBounds="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/iconic_players_card_image"
                    android:scaleType="centerCrop" />

                <!-- Dark overlay to keep text readable -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#66000000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Iconic Players"
                    android:gravity="center"
                    android:textColor="#FFD700"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:shadowColor="#000000"
                    android:shadowRadius="8"
                    android:shadowDx="2"
                    android:shadowDy="2" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/teamsCard"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.42"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="1"
            android:layout_column="0"
            app:cardElevation="6dp"
            app:cardCornerRadius="14dp"
            android:stateListAnimator="@animator/button_hover_scale"
            app:cardBackgroundColor="#25a2c0">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:adjustViewBounds="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/teams_card_image"
                    android:scaleType="centerCrop" />

                <!-- Dark overlay to keep text readable -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#66000000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Iconic Teams"
                    android:gravity="center"
                    android:textColor="#FFD700"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:shadowColor="#000000"
                    android:shadowRadius="8"
                    android:shadowDx="2"
                    android:shadowDy="2" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/highlightsCard"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.42"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="1"
            android:layout_column="1"
            app:cardElevation="6dp"
            app:cardCornerRadius="14dp"
            android:stateListAnimator="@animator/button_hover_scale"
            app:cardBackgroundColor="#4C9C4E">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:adjustViewBounds="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/team_highlights_card_view"
                    android:scaleType="centerCrop" />

                <!-- Dark overlay to keep text readable -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#66000000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Historical Highlights"
                    android:gravity="center"
                    android:textColor="#FFD700"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:shadowColor="#000000"
                    android:shadowRadius="8"
                    android:shadowDx="2"
                    android:shadowDy="2" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/timelineCard"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.42"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="2"
            android:layout_column="0"
            app:cardElevation="6dp"
            app:cardCornerRadius="14dp"
            android:stateListAnimator="@animator/button_hover_scale"
            app:cardBackgroundColor="#f4e8d0">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:adjustViewBounds="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/timeline_card_view_final"
                    android:scaleType="centerCrop" />

                <!-- Dark overlay to keep text readable -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#66000000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Timeline"
                    android:gravity="center"
                    android:textColor="#FFD700"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:shadowColor="#000000"
                    android:shadowRadius="8"
                    android:shadowDx="2"
                    android:shadowDy="2" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/hallOfFameCard"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.42"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_row="2"
            android:layout_column="1"
            app:cardElevation="6dp"
            app:cardCornerRadius="14dp"
            android:stateListAnimator="@animator/button_hover_scale"
            app:cardBackgroundColor="#701230">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:adjustViewBounds="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/team_hof_card_view"
                    android:scaleType="centerCrop" />

                <!-- Dark overlay to keep text readable -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#66000000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Hall of Fame"
                    android:gravity="center"
                    android:textColor="#FFD700"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:shadowColor="#000000"
                    android:shadowRadius="8"
                    android:shadowDx="2"
                    android:shadowDy="2" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>
</LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnExit"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:text="Exit"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:backgroundTint="#FFD700"
        app:cornerRadius="24dp"
        android:layout_gravity="top|end"
        android:layout_margin="16dp" />

</FrameLayout>